package com.serverless;

import com.amazonaws.services.lambda.runtime.Context;
import com.amazonaws.services.lambda.runtime.RequestHandler;
import com.amazonaws.services.lambda.runtime.events.SNSEvent;

import org.apache.log4j.Logger;


public class TextMessageProcess implements RequestHandler<SNSEvent, String> {

    private static final Logger LOG = Logger.getLogger(TextMessageProcess.class);

    public String handleRequest(SNSEvent request, Context context){

       for (SNSEvent.SNSRecord record : request.getRecords()) {
            SNSEvent.SNS sns = record.getSNS();
            LOG.info("handleSNSEvent received SNS message " + sns.getMessage());
        }
        return "handleSNSEvent finished";
    }
}
